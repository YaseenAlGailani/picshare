{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2015",
    "lib": ["DOM", "esnext"],
    "module": "CommonJS",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
