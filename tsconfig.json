{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2015",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts","src/**/*.tsx"],
  "exclude": ["node_modules"]
}
